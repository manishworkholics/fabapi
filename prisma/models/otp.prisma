model Otp {
  id         Int       @id @default(autoincrement())
  user       User      @relation(fields: [userId], references: [id])
  userId     Int
  token      String
  isValid    Boolean   @default(true)
  validUntil DateTime?
  type       OtpType   @default(OTHERS)
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @default(now())
}

enum OtpType {
  EMAIL_VERIFICATION
  RESET_PASSWORD
  SIGNIN
  OTHERS
}
